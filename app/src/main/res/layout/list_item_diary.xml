<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <TextView
        android:id="@+id/list_item_diary_title_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        tools:text="Diary Title"
        android:padding="4dp"
        android:textColor="@color/accent_material_light"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/list_item_diary_place_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="Place"
        android:padding="4dp"
        android:layout_below="@+id/list_item_diary_title_text_view"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        />

    <TextView
        android:id="@+id/list_item_diary_date_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="Diary Date"
        android:padding="4dp"
        android:layout_below="@+id/list_item_diary_place_text_view"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <View android:layout_width="fill_parent"
          android:layout_height="1dip"
          android:background="@color/accent_material_light"
          android:layout_below="@+id/list_item_diary_date_text_view"/>

</RelativeLayout>
